# Portfolio Security Configuration

# Security Keys (Generate strong keys in production)
PORTFOLIO_SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Content Security Policy Nonce (Auto-generated)
CSP_NONCE=auto-generated

# Security Monitoring
SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_LEVEL=warn

# API Configuration (if needed)
# API_BASE_URL=https://api.example.com
# API_KEY=your-api-key

# Build Configuration
NODE_ENV=production
BUILD_TIMESTAMP=auto-generated

# External Services
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
VERCEL_SPEED_INSIGHTS_ID=your-speed-insights-id

# Security Features
ENABLE_CLICKJACKING_PROTECTION=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_INTEGRITY_CHECK=true
ENABLE_RATE_LIMITING=true
