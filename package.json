  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:production": "npm run security:audit && npm run security:check && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm outdated",
    "security:fix": "npm audit fix",
    "security:scan": "npm run security:audit && npm run security:check",
    "security:test": "node scripts/security-test.cjs",
    "build:secure": "npm run security:scan && npm run lint && npm run build",
    "deploy:secure": "npm run build:secure && npm run preview",
